<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.shuidun.book.CityDao">

    <!-- 可根据自己的需求，是否要使用 -->
    <resultMap type="${poImport}" id="BaseResultMap">
        <result property="name" column="name"/>
    </resultMap>

    <!--
          选择性插入
        -->
    <sql id="Base_Insert_Selective">
        <trim prefix="(" suffix=")" suffixOverrides=",">
            <if test="name != null">
                name
            </if>
        </trim>
        <trim prefix="values (" suffix=")" suffixOverrides=",">
            <if test="name != null">
                #{name,jdbcType=VARCHAR}
            </if>
        </trim>
    </sql>

    <!--
      数据库表的基本查询列名集合
    -->
    <sql id="Base_Column_List">
        name
    </sql>

    <!--
        Where子句
      -->
    <sql id="Base_Query_Where">
        <if test="name != null">
            and name = #{name,jdbcType=VARCHAR}
        </if>
    </sql>

    <!--
        基本更新字段
    -->
    <sql id="Base_Update_Column">
        <set>
            <if test="name != null">
                name = #{name,jdbcType=VARCHAR}
            </if>
        </set>
    </sql>

    <!--
        分页查询数据库表
      -->
    <select id="selectPaged" resultMap="BaseResultMap">
        select
        <include refid="Base_Column_List"/>
        from city
    </select>

    <!--
      根据主键查询数据库表
    -->
    <select id="selectByPrimaryKey" parameterType="${pk.attrTypePath}" resultMap="BaseResultMap">
        select
        <include refid="Base_Column_List"/>
        from city
        where name = #{name,jdbcType=VARCHAR}
    </select>


    <!--
      根据主键删除数据库表中的记录
    -->
    <delete id="deleteByPrimaryKey" parameterType="${pk.attrTypePath}">
        delete FROM city
        where name = #{name,jdbcType=VARCHAR}
    </delete>

    <!--
      添加一条记录到数据库表中
    -->
    <insert id="insert" useGeneratedKeys="true" keyProperty="id"
            parameterType="${poImport}">
        insert into city
        (<include refid="Base_Column_List"/>)
        values (
        <if test="name != null">
            #{name,jdbcType=VARCHAR}
        </if>
        )
    </insert>

    <!--
     有选择的添加一条记录到数据库表中
   -->
    <insert id="insertSelective" useGeneratedKeys="true" keyProperty="id"
            parameterType="${poImport}">
        insert into city
        <include refid="Base_Insert_Selective"/>
    </insert>

    <!--
      有选择的可忽略添加一条记录到数据库表中
    -->
    <insert id="insertSelectiveIgnore" useGeneratedKeys="true" keyProperty="id"
            parameterType="${poImport}">
        insert ignore into city
        <include refid="Base_Insert_Selective"/>
    </insert>

    <!--
      根据主键有选择的更新数据库表
    -->
    <update id="updateByPrimaryKeySelective" parameterType="${poImport}">
        update city
        <include refid="Base_Update_Column"></include>
        where name = #{name,jdbcType=VARCHAR}
    </update>


    <!--
      根据主键更新数据库表
    -->
    <update id="updateByPrimaryKey" parameterType="${poImport}">
        update city
        <set>
            <if test="name != null">
                name = #{name,jdbcType=VARCHAR}
            </if>
        </set>
        where name = #{name,jdbcType=VARCHAR}
    </update>

    <!--
      批量添加记录到数据库表中
    -->
    <insert id="batchInsert" parameterType="java.util.List">
        insert into city
        <trim prefix="(" suffix=")" suffixOverrides=",">
            name
        </trim>
        values
        <foreach collection="list" index="index" item="item" separator=",">
            <trim prefix="(" suffix=")" suffixOverrides=",">
                #{item.name,jdbcType=VARCHAR}
            </trim>
        </foreach>
    </insert>

    <!--
      根据主键批量更新数据库表中的记录
    -->
    <update id="batchUpdate" parameterType="java.util.List">
        <foreach collection="list" index="index" item="item" separator=";">
            update city
            <set>
                <trim suffixOverrides=",">
                    <if test="item.name != null">
                        name = #{item.name,jdbcType=VARCHAR}
                    </if>
                </trim>
            </set>
            <where>
                <trim suffixOverrides=",">
                    where name = #{item.name,jdbcType=VARCHAR}
                </trim>
            </where>
        </foreach>
    </update>

    <!--
     使用给定的字段名定义Where子句
   -->
    <sql id="Identifiers_Array_Conditions">
        <foreach collection="array" index="index" item="item" separator=" and ">
            <if test="item == 'name'">
                name = #{name,jdbcType=VARCHAR}
            </if>
        </foreach>
    </sql>

    <!--
      存在即更新否则插入
    -->
    <update id="upsert" parameterType="${poImport}">
        insert into city
        <trim prefix="(" suffix=")" suffixOverrides=",">
            name
        </trim>
        values
        <trim prefix="(" suffix=")" suffixOverrides=",">
            #{name,jdbcType=VARCHAR}
        </trim>
        on duplicate key update
        <trim suffixOverrides=",">
            #{name,jdbcType=VARCHAR}
        </trim>
    </update>


    <!--
      带有空值检查的存在即更新否则插入
    -->
    <update id="upsertSelective" parameterType="${poImport}">
        insert into city
        <trim prefix="(" suffix=")" suffixOverrides=",">
            <if test="name !=null ">
                name
            </if>
        </trim>
        values
        <trim prefix="(" suffix=")" suffixOverrides=",">
            <if test="name !=null ">
                name = #{name,jdbcType=VARCHAR}
            </if>
        </trim>
        on duplicate key update
        <trim suffixOverrides=",">
            <if test="name !=null ">
                name = #{name,jdbcType=VARCHAR}
            </if>
        </trim>
    </update>

    <select id="query" resultMap="BaseResultMap" parameterType="${poImport}">
        select
        <include refid="Base_Column_List"/>
        from city
        <where>
            <include refid="Base_Query_Where"></include>
        </where>
    </select>

    <select id="queryTotal" resultType="long">
        select count(*) from city
    </select>


    <delete id="deleteBatch">
        delete from city where name in
        <foreach item="name" collection="list" open="(" separator="," close=")">
            #{name}
        </foreach>
    </delete>

</mapper>